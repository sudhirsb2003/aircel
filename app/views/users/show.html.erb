

<style>
 #main_content{float:left;width:700px;border-right:0px solid black;padding-right:35px;}
 #sidebar {
	height: 300px;
	width: 400px;
	float: right;
	margin-right: 5px;
	padding: 5px 0 0 5px;
}
</style>

<div id ="sidebar">
<p>
  <%= image_tag @user.photo.url(:medium) %>
</p>

</div>

<div id = "main_content">
<p><%= link_to 'Edit', edit_user_path(@user) %> </p>

<p>
<% if @user.tab.present? %>
<table class="table table-condesed table-bordered">
 <tr>
  <td>Tab Name: <%= @user.tab.name %></td>
  </tr>
</table>
<% else %>
  <%= form_for User.find(@user) do |tab| %>
  <%= tab.collection_select :tab_id, Tab.all, :id, :name, prompt: true %>
  <%= tab.submit %>
  <% end %>
<% end %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Address:</strong>
  <%= @user.address %>
</p>

<p>
  <strong>Employee uid:</strong>
  <%= @user.employee_uid %>
</p>
</div>
