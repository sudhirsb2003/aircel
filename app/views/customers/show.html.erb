<b><%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Destroy', @customer, method: :delete, data: { confirm: 'Are you sure?' } %></b> | <%= link_to 'Back', customers_path %>
<% if @customer.status == 'pending' %>
  <h3 style ="float:right;"> <span class="label label-warning"><%= @customer.status %></span></h3>
<% elsif @customer.status == 'submitted' %>
  <h3 style ="float:right;"> <span class="label label-info"><%= @customer.status %></span></h3>
<% elsif @customer.status == 'complete' %>
  <h3 style ="float:right;"> <span class="btn btn-hg btn-primary"><%= @customer.status %></span></h3><br><br><br><br>
  <p style ="float:right;">
    <%= link_to "Accept", accept_customer_path(:customer_id => @customer.id), :class=> "label label-success" %>
    <%= link_to "Reassign", reassign_customer_path(:customer_id => @customer.id), :class=> "label label-danger" %>
  </p>
  <% else %>
  <h3 style ="float:right;"> <span class="btn btn-hg btn-primary"><%= @customer.status %></span></h3>
<% end %>
<br><br>

<style>
 .dropdown{ border: medium none;
    border-radius: 4px 4px 4px 4px;
    font-size: 12px;
    font-weight: normal;
    line-height: 1.4;
    padding: 9px 10px;
    transition: all 0.25s linear 0s;
    background:#1ABC9C;
    color:#fff;}
</style>

<% if logged_in? && current_user.role_name=="super_user" &&  @customer.status=="pending" %>
   <%= form_for(@new_assignments) do |f| %>
    <%= f.hidden_field :customer_id , :value => @customer.id %>
    <%= f.hidden_field :user_id , :value => current_user.id %>
    <%= select_tag "assignment[tab_id]", options_for_select(User.includes(:tab).collect {|r| [r.name ,r.tab.id] }), :class=>"dropdown" %>
    <span class="dropdown-arrow"></span>
   <%= f.submit "Send for verification", :class=>"btn btn-primary btn-small" %>
 <% end %>
<% else %>

<% if @customer.status=="submitted" %>
<br>
    <% if @customer.status=='submitted' %>
     <td><span class="label label-warning">Submitted to Tab User </span></td></tr><br>
		<small>
		 The customer has been send for verification. this is been assigned to
		 <%= link_to @customer.assignment.tab.inspect, tab_path(@customer.assignment.tab) %><br>
		 <%#= link_to @customer.assignment.tab.user.name, tab_path(@customer.assignment.tab) %><br>
		</small>
    <% end %>


<% end %>
<% end %>
