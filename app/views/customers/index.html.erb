<strong>Import Customers</strong><hr>
<table><%= form_tag import_customers_path, multipart: true do %>
    <tr><td><%= file_field_tag :file %><br></td></tr>
    <tr><td><%= submit_tag "Upload Customers", class: 'btn btn-danger' %></td></tr>
<% end %></table>
<hr>

<table id="customers" class = "table table-condensed table-bordered table-striped">
  <thead>
    <tr>
      <th>Serial Number</th>
      <th>Customer Type</th>
      <th>Reference number</th>
      <th>CAF Number</th>
      <th>MSISDN Number</th>
      <th>Applicant name</th>
      <th>Billing Address</th>
      <th>City </th>
      <th>Pincode </th>
      <th>Office Address </th>
      <th>Office City </th>
      <th>Office Pincode </th>
      <th>Activation Code </th>
      <th>Distributor code </th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.customer_type.name if customer.customer_type %></td>
        <td><%= customer.application_ref_number %></td>
        <td><%= customer.caf_number %></td>
        <td><%= customer.msisdn_number %></td>
        <td width="160px"><%= link_to customer.applicant_name, customer %></td>
        <td width="360px"><%= customer.address %></td>
        <td><%= customer.city %></td>
        <td><%= customer.pincode %></td>
        <% if customer && customer.customer_office %>
        <td><%= customer.customer_office.office_address %></td>
        <td><%= customer.customer_office.office_city %></td>
        <td><%= customer.customer_office.office_pincode %></td>
        <% else %>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <% end %>
        <td><%= customer.activation_code %></td>
        <td><%= customer.dist_code %></td>
        <td><% if customer.status == 'verified' %>
        <span class="label label-success"><%= customer.status %></span></td>
         <% elsif customer.status == 'completed' %>
        <span class="label label-danger"><%= customer.status %></span></td>
         <% elsif customer.status == 'submitted' %>
        <span class="label label-warning"><%= customer.status %></span></td>
         <% else %>
        <span class="label label-info"><%= customer.status %></span></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<p style ="margin-right:50px;"><%= link_to 'New Customer', new_customer_path, :class => "btn btn-primary" %></p><br>
