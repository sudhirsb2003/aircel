 <div class="row">

    <div class="field">
      <%= co.label 'Office Address' %>
      <%= co.text_area :office_address, :class=>"form-control" %>
    </div>
  </div>

 <div class="row">
  <div class="field">
    <%= co.label 'Office City' %>
